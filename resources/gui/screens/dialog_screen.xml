<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="dialog_screen" controller="ru.game.aurora.gui.DialogController">
        <layer childLayout="absolute">
            <control id="dialog_window" name="window" title="Communication" closeable="false" width="80%" height="576px"
                     x="10%" y="20%">
                <panel childLayout="vertical">
                    <panel childLayout="horizontal">
                        <panel id="dialogIcon" width="256px" height="256px"/>
                        <panel width="10px"/>
                        <control name="scrollPanel" horizontal="false" height="256px" childLayout="vertical">
                            <panel childLayout="center" padding="10px" width="100%">
                                <text id="npcText" font="font_noalpha.fnt" wrap="true" text="..." textHAlign="left" width="90%" height="90%" textVAlign="top"/>
                            </panel>
                        </control>
                    </panel>
                    <panel height="10px"/>
                    <panel childLayout="center" padding="10px" width="100%">
                        <control id="replyList" name="listBox" vertical="optional" horizontal="optional" displayItems="10"
                             height="256" selection="Single" width="100%"/>
                    </panel>
                </panel>
            </control>
        </layer>
    </screen>
</nifty>