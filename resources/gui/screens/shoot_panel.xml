<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <controlDefinition name="shoot_panel">
        <panel id="shootPanel" height="100px" childLayout="horizontal" visible="false" width="100%">
            <panel width="20%"/>
            <panel style="nifty-panel" width="60%" childLayout="horizontal" height="100%" padding="8px,8px,8px,8px">
                <panel width="*"/>
                <control id="prev_target" name="button" label="${gui.prev_target}" width="20%" height="90%">
                    <interact onClick="prevTargetPressed()"/>
                </control>
                <panel width="10px"/>
                <control id="next_target" name="button" label="${gui.next_target}" width="20%" height="90%">
                    <interact onClick="nextTargetPressed()"/>
                </control>
                <panel width="10px"/>
                <control id="fire" name="button" label="${gui.fire}" width="20%" height="90%">
                    <interact onClick="firePressed()"/>
                </control>
                <panel width="10px"/>
                <control id="cancel" name="button" label="${gui.cancel}" width="20%" height="90%">
                    <interact onClick="cancelPressed()"/>
                </control>
                <panel width="*"/>
            </panel>
        </panel>
    </controlDefinition>
</nifty>