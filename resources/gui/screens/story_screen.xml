<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="story_screen" controller="ru.game.aurora.gui.StoryScreenController">
        <layer childLayout="absolute">
            <control id="story_window" name="window" hideOnClose="true" width="820px" height="80%" x="10%" y="10%">
                <panel childLayout="vertical">
                    <panel id="imagePanel" width="800px" height="300px" />
                    <panel height="10px"/>
                    <control name="scrollPanel" horizontal="false" height="*" childLayout="vertical">
                        <panel childLayout="center" padding="10px">
                            <text id="storyText" font="font_noalpha.fnt" width="750px" wrap="true" text="" textHAlign="left" x="10px" y="10px"/>
                        </panel>
                    </control>
                    <panel height="10px"/>
                    <panel childLayout="horizontal" height="45px">
                        <panel width="75%"/>
                        <control id="prev_button" name="button" label="&lt;&lt;" height="45px">
                            <interact onClick="prevPage()"/>
                        </control>
                        <control id="next_button" name="button" label="&gt;&gt;" height="45px">
                            <interact onClick="nextPage()"/>
                        </control>
                    </panel>
                </panel>
            </control>
        </layer>
    </screen>
</nifty>