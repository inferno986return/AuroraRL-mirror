<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <controlDefinition name="journal_control">
        <panel childLayout="horizontal" width="100%" height="100%">
            <control id="#itemsList" name="listBox" vertical="optional" horizontal="optional" displayItems="25" selection="Single" width="35%"/>
            <panel width="10px"/>
            <panel childLayout="center" padding="10px" style="nifty-panel-no-shadow" height="100%" width="*">
               <text id="#message_text" style="base-font" width="90%" wrap="true" textHAlign="left" textVAlign="top"/>
            </panel>
        </panel>
    </controlDefinition>


    <screen id="journal_screen" controller="ru.game.aurora.gui.JournalScreenController">
        <layer childLayout="absolute">
            <control id="journal_window" name="window" hideOnClose="true" title="${gui.journal.title}" width="80%" height="80%" x="10%" y="10%">
                <panel childLayout="vertical">

                    <!-- tabs -->
                    <control id="journal_tabs" name="tabGroup" buttonWidth="30%" buttonHeight="30px" height="650px">
                        <control id="active_projects" name="tab" caption="${gui.journal.quest.title}" childLayout="center">
                            <control name="journal_control" id="quest_tab" />
                        </control>
                        <control id="completed_projects" name="tab" caption="${gui.journal.codex.title}">
                            <control name="journal_control" id="codex_tab" />
                        </control>
                    </control>

                    <!-- close button panel -->
                    <panel height="10px"/>
                    <panel childLayout="horizontal" height="50px">
                        <panel width="80%"/>
                        <control id="close_button" name="button" label="${gui.close}" width="150px" height="45px">
                            <interact onClick="closeScreen()"/>
                        </control>
                    </panel>
                </panel>
            </control>
        </layer>
    </screen>

</nifty>