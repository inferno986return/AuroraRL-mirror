<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <controlDefinition name="button_and_count">
        <panel childLayout="horizontal">
            <panel childLayout="vertical" padding="5px">
                <image filename="$icon"/>
                <text style="base-font" id="count_text" text="100"/>
            </panel>
            <panel backgroundImage="$background" width="230px" height="53px" childLayout="center">
                <text style="base-font" text="$title"/>
            </panel>
        </panel>
    </controlDefinition>

    <screen id="galaxy_map_gui" controller="ru.game.aurora.gui.GalaxyMapController">
        <layer id="starmap_layer" childLayout="vertical">
            <control name="top_panel" id="top_panel"/>

            <!-- middle panel contains list of buttons to the right -->
            <panel height="*" childLayout="horizontal">
                <panel width="85%"/>
                <panel childLayout="vertical">
                    <panel height="30%"/>
                    <panel childLayout="vertical" backgroundImage="resources/sprites/gui/side_panel.png"
                           padding="20,5,20,20" imageMode="resize:24,240,10,24,24,240,10,201,24,240,10,24">
                        <control id="research_button" name="button" label="${gui.space.research}" width="90%"
                                 height="50px">
                            <interact onClick="openResearchScreen()"/>
                        </control>
                        <control id="engineering_button" name="button" label="${gui.space.engineering}" width="90%"
                                 height="50px">
                            <interact onClick="openEngineeringScreen()"/>
                        </control>
                        <control id="journal_button" name="button" label="${gui.journal.title}"
                                 width="90%"
                                 height="50px">
                            <interact onClick="openJournal()"/>
                        </control>
                        <control id="starmap_button" name="button" label="${gui.space.galaxy_map}" width="90%"
                                 height="50px">
                            <interact onClick="openStarMap()"/>
                        </control>
                        <control id="menu_button" name="button" label="${gui.space.menu}" width="90%" height="50px">
                            <interact onClick="openMenu()"/>
                        </control>
                    </panel>
                    <panel height="*"/>
                </panel>
            </panel>


            <panel height="100px" childLayout="center">
                <control id="shoot_panel" name="shoot_panel" height="100px" width="*"/>
            </panel>
            <!-- panel containing additional buttons like 'interact' 'land' 'scan' that appear only when needed -->
            <panel id="interactPanel" height="100px" childLayout="horizontal" visible="false">
                <panel width="40%"/>
                <panel style="nifty-panel" x="40%" width="200px" childLayout="center" height="100%">
                    <control id="left_button" name="button" label="${gui.space.enter_system_button}" width="90%"
                             height="90%">
                        <interact onClick="enterStarsystem()"/>
                    </control>
                    <panel width="*"/>
                </panel>
            </panel>

            <!-- bottom panel containing weapon buttons and log text -->
            <panel height="113px" imageMode="repeat:0,0,1279,113" childLayout="horizontal"
                   backgroundImage="sprites/gui/bottom_panel_galaxy.png" padding="40px">
                <panel width="242px"/>

                <control id="log_list" name="listBox" vertical="optional" horizontal="optional" displayItems="3"
                         selection="Disabled" width="50%" height="100px"/>
                <text id="ship_coordinates" style="base-font" text="${gui.space.ship_coords}" width="*"/>
            </panel>

        </layer>
    </screen>
    <screen id="star_system_gui" controller="ru.game.aurora.gui.GalaxyMapController">

        <layer id="starsystem_layer" childLayout="vertical">
            <control name="top_panel" id="top_panel"/>

            <!-- midlle panel contains list of buttons to the right -->
            <panel height="*" childLayout="horizontal">
                <panel width="85%"/>
                <panel childLayout="vertical">
                    <panel height="30%"/>
                    <panel childLayout="vertical" backgroundImage="resources/sprites/gui/side_panel.png"
                           padding="20,5,20,20" imageMode="resize:24,240,10,24,24,240,10,201,24,240,10,24">
                        <control id="research_button" name="button" label="${gui.space.research}" width="90%"
                                 height="50px">
                            <interact onClick="openResearchScreen()"/>
                        </control>
                        <control id="engineering_button" name="button" label="${gui.space.engineering}" width="90%"
                                 height="50px">
                            <interact onClick="openEngineeringScreen()"/>
                        </control>
                        <control id="journal_button" name="button" label="${gui.journal.title}"
                                 width="90%"
                                 height="50px">
                            <interact onClick="openJournal()"/>
                        </control>
                        <control id="landing_party_equip_button" name="button" label="${gui.space.landing_party}"
                                 width="90%"
                                 height="50px">
                            <interact onClick="openLandingPartyScreen()"/>
                        </control>
                        <control id="menu_button" name="button" label="${gui.space.menu}" width="90%" height="50px">
                            <interact onClick="openMenu()"/>
                        </control>
                    </panel>
                    <panel height="*"/>
                </panel>
            </panel>

            <panel height="100px" childLayout="center">
                <control id="shoot_panel" name="shoot_panel" height="100px"/>
            </panel>

            <!-- panel containing additional buttons like 'interact' 'land' 'scan' that appear only when needed -->
            <panel id="interactPanel" height="100px" childLayout="horizontal" visible="false">
                <panel width="40%"/>
                <panel style="nifty-panel" x="40%" width="256px" childLayout="horizontal" height="100%">
                    <control id="left_button" name="button" label="${gui.space.land}" width="40%" height="90%">
                        <interact onClick="leftButtonPressed()"/>
                    </control>
                    <panel width="*"/>
                    <control id="right_button" name="button" label="${gui.space.scan}" width="40%" height="90%">
                        <interact onClick="rightButtonPressed()"/>
                    </control>
                </panel>
            </panel>

            <!-- bottom panel containing weapon buttons and log text -->
            <panel height="113px" childLayout="horizontal" backgroundImage="sprites/gui/bottom_panel_starsystem.png"
                   imageMode="repeat:0,0,1279,113" padding="20px">
                <control id="weapon_0_button" name="image_button" label="Weapon #1" width="64px" height="64px">
                    <interact onClick="weaponClicked(0)"/>
                </control>
                <panel width="10px"/>
                <control id="weapon_1_button" enabled="false" name="image_button" label="Weapon #2" width="64px"
                         height="64px">
                    <interact onClick="weaponClicked(1)"/>
                </control>
                <panel width="10px"/>
                <control id="weapon_2_button" enabled="false" name="image_button" label="Weapon #3" width="64px"
                         height="64px">
                    <interact onClick="weaponClicked(2)"/>
                </control>
                <panel width="10px"/>
                <control id="weapon_3_button" enabled="false" name="image_button" label="Weapon #4" width="64px"
                         height="64px">
                    <interact onClick="weaponClicked(3)"/>
                </control>

                <panel width="20px"/>

                <panel width="60%" childLayout="vertical">
                    <panel height="15px"/>
                    <control id="log_list" name="listBox" vertical="optional" horizontal="optional" displayItems="3"
                             selection="Disabled" height="100px"/>
                </panel>

                <panel width="20px"/>

                <panel width="50px" childLayout="vertical">
                    <panel height="15px"/>
                    <control id="next_turn_button" name="button" label="${gui.end_turn}" height="50px">
                        <interact onClick="nextTurn()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <popup id="landing_party_lost" childLayout="absolute">
        <control id="landing_party_lost_window" name="window" hideOnClose="true" width="60%" height="350px" x="20%"
                 y="30%">
            <panel childLayout="vertical">
                <panel height="10px"/>
                <panel height="256px" childLayout="horizontal">
                    <image width="256px" filename="sprites/gui/crew_death.png"/>
                    <text width="*" height="256px" text="${gui.landing_party_lost}" style="base-font"/>
                </panel>
                <panel height="10px"/>
                <panel childLayout="horizontal" height="45px">
                    <panel width="85%"/>
                    <control id="close_button" name="button" label="${gui.ok}" height="45px">
                        <interact onClick="closeCurrentPopup()"/>
                    </control>
                </panel>
            </panel>
        </control>
    </popup>

    <popup id="landing" childLayout="absolute">
        <control id="landing_window" name="window" hideOnClose="true" closeable="false" width="60%" height="350px"
                 x="20%" y="30%">
            <panel childLayout="vertical" margin="10px">
                <panel height="256px" childLayout="horizontal">
                    <image id="shuttle_image" width="256px" height="256px"/>
                    <text width="*" height="256px" text="${gui.landing}" style="base-font"/>
                </panel>
            </panel>
        </control>
    </popup>


    <popup id="planet_scan" childLayout="absolute">
        <control id="panet_scan_window" name="window" title="${gui.scan.title}" hideOnClose="true" width="60%"
                 height="80%"
                 x="20%" y="10%">
            <panel childLayout="vertical">
                <panel childLayout="horizontal" height="266px">
                    <image filename="resources/sprites/portraits/scientist.png" width="256px" height="256px"/>
                    <panel width="10px"/>
                    <panel style="nifty-listbox#scrollpanel" width="*" height="256px" childLayout="horizontal"
                           padding="5px">
                        <text width="*" height="256px" id="scan_text" style="base-font" textHAlign="left"
                              padding="5px"/>
                    </panel>
                </panel>
                <text style="base-font" text="${gui.scan.surface_map}"/>
                <panel width="100%" height="*" childLayout="horizontal" style="nifty-panel-no-shadow" padding="5px">
                    <panel id="surfaceMapPanel" width="100%" height="90%" childLayout="absolute"/>
                </panel>
                <panel height="10px"/>
                <panel childLayout="horizontal" height="45px">
                    <text style="base-font" text="${gui.scan.filter}"/>;
                    <control id="bioscan_checkbox" name="checkbox" checked="true"/>
                </panel>
                <panel childLayout="horizontal" height="45px">
                    <panel width="85%"/>
                    <control id="close_button" name="button" label="${gui.ok}" height="45px">
                        <interact onClick="closeCurrentPopup()"/>
                    </control>
                </panel>
            </panel>
        </control>
        <control id="shuttlePosition" name="draggable" revert="false" width="64px" height="64px" childLayout="center"
                 valign="top">
            <image filename="resources/sprites/ships/player_shuttle.png" width="64px" height="64px"/>
        </control>
    </popup>

    <popup id="object_scan" childLayout="absolute">
        <control id="object_scan_window" name="window" title="${gui.scan.title}" hideOnClose="true" width="60%" x="20%"
                 y="30%">
            <panel childLayout="vertical">
                <panel childLayout="horizontal" padding="10px" height="276px">
                    <image filename="resources/sprites/portraits/scientist.png" width="256px" height="256px"/>
                    <panel width="10px"/>
                    <panel style="nifty-listbox#scrollpanel" width="*" height="256px" childLayout="horizontal">
                        <text width="100%" height="256px" id="scan_text" style="base-font" textHAlign="left"
                              padding="5px" wrap="true"/>
                    </panel>
                </panel>
                <panel height="10px"/>
                <panel childLayout="horizontal" height="45px">
                    <panel width="85%"/>
                    <control id="close_button" name="button" label="${gui.ok}" height="45px">
                        <interact onClick="closeCurrentPopup()"/>
                    </control>
                </panel>
            </panel>
        </control>
    </popup>
</nifty>