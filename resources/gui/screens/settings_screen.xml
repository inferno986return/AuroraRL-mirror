<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="settings_screen" controller="ru.game.aurora.gui.SettingsScreenController">
        <layer childLayout="absolute">
            <control id="settings_window" name="window" closeable="false" title="${gui.settings.title}" width="80%" height="80%" x="10%" y="10%">
                <panel childLayout="vertical">
                    <text style="base-font" wrap="true" text="${gui.settings.resolution}" width="60%" textHAlign="left" />
                    <control id="resolution_select" name="dropDown"/>
                    <panel height="*"/>
                    <panel childLayout="horizontal" height="50px">
                        <panel width="*"/>
                        <control id="close_button" name="button" label="${gui.ok}" width="150px" height="45px">
                            <interact onClick="applySettings()"/>
                        </control>
                        <panel width="10px"/>
                        <control id="close_button" name="button" label="${gui.cancel}" width="150px" height="45px">
                            <interact onClick="cancelSettings()"/>
                        </control>
                        <panel width="10px"/>
                    </panel>
                </panel>
            </control>
        </layer>
    </screen>
</nifty>