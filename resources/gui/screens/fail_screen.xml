<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="fail_screen" controller="ru.game.aurora.gui.FailScreenController">
        <layer childLayout="absolute">
            <control id="fail_window" name="window" hideOnClose="true" width="830px" height="80%" x="10%" y="10%">
                <panel childLayout="vertical">
                    <panel id="imagePanel" width="800px" height="300px"/>
                    <panel height="10px"/>
                    <control name="scrollPanel" width="800px" horizontal="false" height="*" childLayout="vertical">
                        <panel childLayout="center"  width="100%" padding="10px">
                            <text id="storyText" style="white-font" width="100%" wrap="true" text=""
                                  textHAlign="left" />
                        </panel>
                    </control>
                    <panel height="10px"/>
                    <panel childLayout="horizontal" height="45px">
                        <panel width="85%"/>
                        <control id="prev_button" name="button" label="${gui.ok}" height="45px">
                            <interact onClick="gameOver()"/>
                        </control>
                    </panel>
                </panel>
            </control>
        </layer>
    </screen>
</nifty>