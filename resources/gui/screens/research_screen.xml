<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <controlDefinition name="list_screen" controller="ru.game.aurora.gui.niffy.ListScreenController">
        <panel childLayout="horizontal">
            <control id="itemsList" name="listBox" vertical="optional" horizontal="optional" displayItems="20" selection="Single" forceSelection="true" />
            <panel childLayout="vertical">
                <panel id="selectedItemImg" height="256" />
                <control id="scrollbarPanelId" name="scrollPanel" horizontal="false" height="*">
                    <control name="label" id="selectedItemText" />
                </control>
            </panel>
        </panel>
    </controlDefinition>


    <popup id="research_screen" childLayout="absolute" controller="ru.game.aurora.gui.ResearchScreenController">
        <control id="research_window" name="window" title="Research"  width="60%" height="80%" x="20%" y="10%">
            <panel childLayout="horizontal">
                <control name="list_screen" id="content"/>
            </panel>

        </control>
    </popup>
</nifty>