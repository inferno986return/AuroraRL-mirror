<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <controlDefinition name="research_line">
        <panel childLayout="horizontal" width="100%" align="right">
            <control id="#name_text" name="label" align="left" textHAlign="left" width="*"/>
            <control id="decrease_scientists" name="button" width="32px" text="-" visibleToMouse="true"/>
            <control id="increase_scientists" name="button" width="32px" text="+;" visibleToMouse="true"/>

        </panel>

    </controlDefinition>

    <controlDefinition name="list_screen">
        <panel childLayout="horizontal" width="100%" height="100%">
            <control id="itemsList" name="listBox" vertical="optional" horizontal="optional" displayItems="25" selection="Single" width="30%" viewConverterClass="ru.game.aurora.gui.ResearchListViewConverter">
                    <control name="research_line" controller="de.lessvoid.nifty.controls.listbox.ListBoxItemController">
                        <effect>
                            <onCustom customKey="focus" name="colorBar" post="false" color="#444f" neverStopRendering="true" timeType="infinite" />
                            <onCustom customKey="select" name="colorBar" post="false" color="#444f" neverStopRendering="true" timeType="infinite" />
                            <onCustom customKey="select" name="textColor" post="false" color="#fc0f" neverStopRendering="true" timeType="infinite" />
                        </effect>
                        <interact onClick="listBoxItemClicked()"/>
                    </control>
            </control>
            <panel width="10%"/>
            <panel childLayout="vertical">
                <panel childLayout="center">
                    <panel width="*"/>
                    <panel id="selectedItemImg" height="256" width="256"/>
                </panel>
                <panel height="10px" />
                <control id="scrollbarPanelId" name="scrollPanel" horizontal="false">
                    <text id="selectedItemText" font="font.fnt" wrap="true" text="No item selected" width="60%" textHAlign="left" />
                </control>
            </panel>
        </panel>
    </controlDefinition>


    <screen id="research_screen" controller="ru.game.aurora.gui.ResearchScreenController">
        <layer childLayout="absolute">
            <control id="research_window" name="window" title="Research"  closeable="false" width="60%" height="80%" x="20%" y="10%">
                <panel childLayout="vertical" height="80%">

                    <!-- tabs -->
                    <control id="research_tabs" name="tabGroup" buttonWidth="150px" height="650px">
                        <control id="active_projects" name="tab" caption="Active projects" childLayout="center">
                           <control name="list_screen" id="active_list_screen" />
                        </control>
                        <control id="completed_projects" name="tab" caption="Completed projects">
                            <control name="list_screen" id="completed_list_screen" />
                        </control>
                    </control>

                    <!-- close button panel -->

                    <panel childLayout="horizontal">
                        <panel width="75%"/>
                        <control id="close_button" name="button" label="Close" width="150px" height="45px">
                            <interact onClick="closeScreen()"/>
                        </control>
                    </panel>
                </panel>
            </control>
        </layer>
    </screen>
</nifty>