<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <controlDefinition name="list_screen" controller="ru.game.aurora.gui.niffy.ListScreenController">
        <panel childLayout="horizontal">
            <control id="itemsList" name="listBox" vertical="optional" horizontal="optional" displayItems="8" selection="Single" forceSelection="true" />
            <panel childLayout="vertical">
                <panel id="selectedItemImg" width="256" height="256" />
                <control id="scrollbarPanelId" name="scrollPanel" horizontal="false">
                    <control name="label" id="selectedItemText" />
                </control>
            </panel>
        </panel>
    </controlDefinition>

    <popup id="research_screen" childLayout="center">
        <control id="research_window" name="window" title="Research" width="640px" height="480px">
            <control name="list_screen" id="content"/>
        </control>
    </popup>
</nifty>