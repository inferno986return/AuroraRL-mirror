<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">


    <popup id="ingame_menu" childLayout="absolute" >
        <control id="menu_window" name="window" closeable="false" title="Menu" x="40%" y="30%" width="20%" height="30%">
            <panel childLayout="vertical">
                <panel id="panel" childLayout="vertical">
                    <panel height="10%"/>
                    <control id="continue_game_button" name="button" label="Continue Game" width="100%" height="20%" controller="ru.game.aurora.gui.IngameMenuController">
                        <interact onClick="continueGame()" />
                    </control>
                    <panel height="10%"/>
                    <control id="save_game_button" name="button" label="Save Game" width="100%" height="20%" controller="ru.game.aurora.gui.IngameMenuController">
                        <interact onClick="saveGame()" />
                    </control>
                    <panel height="10%"/>
                    <control id="exit_game_button" name="button" label="Exit Game" width="100%" height="20%" controller="ru.game.aurora.gui.IngameMenuController">
                        <interact onClick="exitGame()" />
                    </control>
                </panel>
            </panel>
        </control>
    </popup>
</nifty>