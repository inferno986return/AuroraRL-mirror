<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <screen id="main_menu" controller="ru.game.aurora.application.MainMenu$MainMenuController">
        <layer id="layer" childLayout="horizontal">
            <panel width="10%"/>
            <panel id="panel" childLayout="vertical">
                <panel height="60%"/>
                <control id="continue_game_button" name="button" label="Continue Game" width="20%" height="7%">
                        <interact onClick="loadGame()" />
                </control>
                <panel height="5%"/>
                <control id="new_game_button" name="button" label="New Game" width="20%" height="7%">
                    <interact onClick="newGame()" />
                </control>
                <panel height="5%"/>
                <control id="exit_game_button" name="button" label="Exit Game" width="20%" height="7%">
                    <interact onClick="exitGame()" />
                </control>
            </panel>

        </layer>
    </screen>

    <screen id="empty_screen">
            <layer/>
    </screen>

</nifty>