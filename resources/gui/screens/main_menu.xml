<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <screen id="main_menu" controller="ru.game.aurora.application.MainMenu$MainMenuController">
        <layer id="layer" childLayout="horizontal">
            <panel width="10%"/>
            <panel id="panel" childLayout="vertical">
                <panel height="60%"/>
                <control id="continue_game_button" name="button" label="${gui.main_menu.load_game}" width="20%" height="7%">
                        <interact onClick="loadGame()" />
                </control>
                <panel height="5%"/>
                <control id="new_game_button" name="button" label="${gui.main_menu.new_game}" width="20%" height="7%">
                    <interact onClick="newGame()" />
                </control>
                <panel height="5%"/>
                <control id="exit_game_button" name="button" label="${gui.main_menu.exit_game}" width="20%" height="7%">
                    <interact onClick="exitGame()" />
                </control>
            </panel>

        </layer>
    </screen>

    <screen id="empty_screen">
        <layer/>
    </screen>

    <popup id="load_failed" childLayout="absolute">
        <control id="load_failed_window" name="window" hideOnClose="true" title="${gui.error_caption}" width="60%" height="350px" x="20%"
                 y="30%">
            <panel childLayout="vertical">
                <panel height="10px"/>
                <panel height="256px" childLayout="horizontal">
                    <image width="256px" filename="sprites/gui/crew_death.png"/>
                    <panel width="10px"/>
                    <text width="60%" height="256px" wrap="true" textHAlign="center" textVAlign="center" text="${gui.main_menu.save_corrupted}" style="base-font"/>
                </panel>
                <panel height="10px"/>
                <panel childLayout="horizontal" height="45px">
                    <panel width="85%"/>
                    <control id="close_button" name="button" label="Ok" height="45px">
                        <interact onClick="closeCurrentPopup()"/>
                    </control>
                </panel>
            </panel>
        </control>
    </popup>

</nifty>