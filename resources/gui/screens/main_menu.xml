<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <screen id="main_menu" controller="ru.game.aurora.application.MainMenu$MainMenuController">
        <layer id="layer" childLayout="center">
            <panel id="panel" childLayout="vertical">
                <control id="continue_game_button" name="button" label="Continue Game">
                        <interact onClick="loadGame()" />
                </control>

                <control id="new_game_button" name="button" label="New Game">
                    <interact onClick="newGame()" />
                </control>

                <control id="exit_game_button" name="button" label="Exit Game">
                    <interact onClick="exitGame()" />
                </control>
            </panel>

        </layer>
    </screen>

    <screen id="empty_screen"/>

</nifty>