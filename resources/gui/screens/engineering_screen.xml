<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <controlDefinition name="engineering_line">
        <panel childLayout="horizontal" width="100%" align="right">
            <control id="#name_text" name="label" align="left" textHAlign="left" width="*"/>
            <control id="#decrease_engineers" name="button" width="32px" label="-" >
                <interact onClick="onDecreaseEngineersButtonClicked()"/>
            </control>
            <control id="#increase_engineers" name="button" width="32px" label="+">
                <interact onClick="onIncreaseEngineersButtonClicked()"/>
            </control>

        </panel>

    </controlDefinition>

    <controlDefinition name="storage_line">
        <panel childLayout="horizontal" width="100%" align="right">
            <control id="#item" name="label" align="left" textHAlign="left" width="*"/>
            <control id="#storage_to_inventory" name="button" width="32px" label="}" >
                <interact onClick="onStorageToInventoryClicked()"/>
            </control>
        </panel>
    </controlDefinition>

    <controlDefinition name="inventory_line">
        <panel childLayout="horizontal" width="100%" align="right">
            <control id="#inventory_to_storage" name="button" width="32px" label="{" >
                <interact onClick="onInventoryToStorageClicked()"/>
            </control>
            <control id="#invtem" name="label" align="left" textHAlign="left" width="*"/>
        </panel>
    </controlDefinition>

    <controlDefinition name="list_screen_engineering">
        <panel childLayout="horizontal" width="100%" height="100%">
            <control id="itemsList" name="listBox" vertical="optional" horizontal="optional" displayItems="24" selection="Single" width="45%" viewConverterClass="ru.game.aurora.gui.EngineeringListViewConverter">
                <control name="engineering_line" controller="de.lessvoid.nifty.controls.listbox.ListBoxItemController">
                    <effect>
                        <onCustom customKey="focus" name="colorBar" post="false" color="#444f" neverStopRendering="true" timeType="infinite" />
                        <onCustom customKey="select" name="colorBar" post="false" color="#444f" neverStopRendering="true" timeType="infinite" />
                        <onCustom customKey="select" name="textColor" post="false" color="#fc0f" neverStopRendering="true" timeType="infinite" />
                    </effect>
                    <interact onClick="listBoxItemClicked()"/>
                </control>
            </control>
            <panel width="10%"/>
            <panel childLayout="vertical">
                <panel childLayout="center">
                    <panel width="*"/>
                    <panel id="selectedItemImg" height="256" width="256"/>
                </panel>
                <panel height="10px" />
                <control id="scrollbarPanelId" name="scrollPanel" horizontal="false" childLayout="center">
                    <panel childLayout="center" padding="10px" width="100%">
                        <text id="selectedItemText" style="base-font" wrap="true" text="${gui.no_item_selected}" width="80%" textHAlign="left" />
                    </panel>
                </control>
            </panel>
        </panel>
    </controlDefinition>


    <screen id="engineering_screen" controller="ru.game.aurora.gui.EngineeringScreenController">
        <layer childLayout="absolute">
            <control id="engineering_window" name="window" hideOnClose="true" title="${gui.engineering.title}" width="80%" height="80%" x="10%" y="10%">
                <panel childLayout="vertical">
                    <control id="engineering_tabs" name="tabGroup" buttonWidth="30%" buttonHeight="30px" height="650px">
                        <control id="repairs" name="tab" caption="${gui.engineering.repairs.title}" childLayout="vertical">

                            <panel childLayout="horizontal">
                                <text id="hullPointsToRepair" style="base-font" wrap="true" text="${gui.engineering.repairs.hull_points_to_repair}" width="60%" textHAlign="left" />
                                <control id="decreaseHullPoints" name="button" width="32px" label="-" >
                                    <interact onClick="onHullPointsDecreased()"/>
                                </control>
                                <control id="increaseHullPoints" name="button" width="32px" label="+">
                                    <interact onClick="onHullPointsIncreased()"/>
                                </control>
                            </panel>
                            <panel childLayout="horizontal">
                                <text id="assignedEngineers" style="base-font" wrap="true" text="${gui.engineering.repairs.assigned_engineers}" width="60%" textHAlign="left" />
                                <control id="decreaseEngineers" name="button" width="32px" label="-" >
                                    <interact onClick="onEngineersDecreased()"/>
                                </control>
                                <control id="increaseEngineers" name="button" width="32px" label="+">
                                    <interact onClick="onEngineersIncreased()"/>
                                </control>
                            </panel>

                            <text id="requiredRuText" style="base-font" wrap="true" text="${gui.engineering.repairs.resource_units_required}" width="60%" textHAlign="left" />

                            <panel childLayout="horizontal">
                                <panel childLayout="vertical" width="45%">
                                    <text id="storageText" style="base-font" align="center" text="${gui.storage}" height="32px"/>
                                    <control id="storageList" name="listBox" vertical="optional" horizontal="optional" displayItems="10" selection="Single" viewConverterClass="ru.game.aurora.gui.StorageViewConverter">
                                        <control name="storage_line" controller="de.lessvoid.nifty.controls.listbox.ListBoxItemController"/>
                                    </control>
                                </panel>
                                <panel/>
                                <panel childLayout="vertical" width="45%">
                                    <text id="inventoryText" style="base-font" align="center" text="${gui.inventory}" height="32px"/>
                                    <control id="inventoryList" name="listBox" vertical="optional" horizontal="optional" displayItems="10" selection="Single" viewConverterClass="ru.game.aurora.gui.SimpleInventoryViewConverter">
                                        <control name="inventory_line" controller="de.lessvoid.nifty.controls.listbox.ListBoxItemController"/>
                                    </control>
                                </panel>
                            </panel>
                        </control>
                        <control id="upgrades" name="tab" caption="${gui.engineering.upgrades.title}" childLayout="center">
                            <control name="list_screen_engineering" id="engineering_projects_list_screen" />
                        </control>
                    </control>

                    <panel childLayout="horizontal" height="50px">
                        <panel width="75%"/>
                        <control id="close_button" name="button" label="${gui.close}" width="150px" height="45px">
                            <interact onClick="closeScreen()"/>
                        </control>
                    </panel>
                </panel>
            </control>
        </layer>
    </screen>
</nifty>