<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="engineering_screen" controller="ru.game.aurora.gui.EngineeringScreenController">
        <layer childLayout="absolute">
            <control id="engineering_window" name="window" title="Engineering" width="80%" height="80%" x="10%" y="10%">
                <panel childLayout="vertical">
                    <panel childLayout="horizontal">
                        <text id="hullPointsToRepair" font="font.fnt" wrap="true" text="Hull points to repair" width="60%" textHAlign="left" />
                        <control id="decreaseHullPoints" name="button" width="32px" label="-" >
                            <interact onClick="onHullPointsDecreased()"/>
                        </control>
                        <control id="increaseHullPoints" name="button" width="32px" label="+">
                            <interact onClick="onHullPointsIncreased()"/>
                        </control>
                    </panel>

                    <panel childLayout="horizontal">
                        <text id="assignedEngineers" font="font.fnt" wrap="true" text="Hull points to repair" width="60%" textHAlign="left" />
                        <control id="decreaseEngineers" name="button" width="32px" label="-" >
                            <interact onClick="onEngineersDecreased()"/>
                        </control>
                        <control id="increaseEngineers" name="button" width="32px" label="+">
                            <interact onClick="onEngineersIncreased()"/>
                        </control>
                    </panel>

                    <text id="requiredRuText" font="font.fnt" wrap="true" text="Required resource units:" width="60%" textHAlign="left" />

                    <panel height="*"/>

                    <panel childLayout="horizontal" height="50px">
                        <panel width="75%"/>
                        <control id="close_button" name="button" label="Close" width="150px" height="45px">
                            <interact onClick="closeScreen()"/>
                        </control>
                    </panel>
                </panel>
            </control>
        </layer>
    </screen>
</nifty>