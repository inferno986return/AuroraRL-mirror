<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
    <style id="nifty-checkbox-style#panel">
        <attributes width="23px" height="23px" childLayout="center" backgroundColor="#3C2C41"/>
        <effect>
            <onActive name="border" color="#000000" post="true" inset="1px"/>
            <onFocus name="colorBar" color="#695171" post="true" inset="1px"/>
            <onHover name="border" color="#3C2C41" post="true"/>
            <onEnabled name="renderQuad" startColor="#99A6A3" endColor="#3C2C4100" post="true" length="150"/>
            <onDisabled name="renderQuad" startColor="#3C2C41" endColor="#99A6A3" post="true" length="150"/>
        </effect>
    </style>

    <style id="nifty-checkbox-style#select">
        <attributes align="center" valign="center" width="23px" height="23px"/>
        <effect overlay="true">
            <onCustom customKey="show" name="imageSize" startSize="2.0" endSize="1.0" length="200" post="true"/>
            <onCustom customKey="show" name="fade" start="#0" end="#f" length="250" post="true"/>
            <onCustom customKey="show" name="imageOverlay" filename="gui/style/checkbox/checkbox.png" width="23px"
                      height="23px" post="true" neverStopRendering="true"/>
            <onCustom customKey="hide" name="fade" start="#f" end="#0" length="250" post="true"/>
            <onCustom customKey="hide" name="imageOverlay" filename="gui/style/checkbox/checkbox.png" width="23px"
                      height="23px" post="true" length="200"/>
            <onEnabled name="fade" start="#4" end="#f" length="150" post="false"/>
            <onDisabled name="fade" start="#f" end="#4" length="150" post="false"/>
        </effect>
    </style>
</nifty-styles>
