<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button background panel -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <style id="nifty-button#panel">
        <attributes backgroundImage="gui/style/button/button.png" imageMode="sprite-resize:100,23,0,10,80,10,10,10,80,10,3,10,80,10,10" paddingLeft="7px" paddingRight="7px" width="100px" height="23px" childLayout="center" visibleToMouse="true" />
        <effect>
           <!-- <onHover name="border" color="#822f" post="true" />-->
            <onHover name="imageOverlayPulsate" filename="gui/style/button/button.png" imageMode="sprite-resize:100,23,1,10,80,10,10,10,80,10,3,10,80,10,10" post="true" />
            <onClick name="imageOverlay" filename="gui/style/button/button.png" imageMode="sprite-resize:100,23,2,10,80,10,10,10,80,10,3,10,80,10,10" post="true" />
            <onEnabled name="renderQuad" startColor="#3C2C41" endColor="#99A6A3" post="true" length="150" />
            <onDisabled name="renderQuad" startColor="#99A6A3" endColor="#3C2C41" post="true" length="150" />
        </effect>
    </style>

    <style id="aurora-button#panel">
        <attributes backgroundImage="gui/style/button/button_1.png" imageMode="sprite-resize:100,23,0,10,80,10,10,10,80,10,3,10,80,10,10" padding="8px,8px,8px,8px" width="100px" height="23px" childLayout="center" visibleToMouse="true" />
        <effect>
            <!-- <onHover name="border" color="#822f" post="true" />-->
            <onHover name="imageOverlayPulsate" filename="gui/style/button/button_1.png" imageMode="sprite-resize:100,23,1,10,80,10,10,10,80,10,3,10,80,10,10" post="true" />
            <onClick name="imageOverlay" filename="gui/style/button/button_1.png" imageMode="sprite-resize:100,23,2,10,80,10,10,10,80,10,3,10,80,10,10" post="true" />
            <onDisabled name="imageOverlay" filename="gui/style/button/no_button.png" imageMode="resize:10,2,10,10,10,2,10,2,10,2,10,10" post="true" />
        </effect>
    </style>

    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button text -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <style id="nifty-button#text" base="button-font">
        <attributes align="center" valign="center" textHAlign="center" textVAlign="center" visibleToMouse="false"/>
        <effect>
            <onEnabled name="textColorAnimated" startColor="#99A6A3" endColor="#3C2C41" post="false" length="150" />
            <onDisabled name="textColorAnimated" startColor="#3C2C41" endColor="#99A6A3" post="false" length="150" />
        </effect>
    </style>
</nifty-styles>
