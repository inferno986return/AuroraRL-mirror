<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
    <style id="nifty-listbox">
        <attributes/>
    </style>
    <style id="nifty-listbox#scrollpanel">
        <attributes focusable="true" padding="1px"/>
        <effect overlay="true">
            <onActive name="colorBar" color="#110011" post="false" neverStopRendering="true" timeType="infinite"/>
            <onActive name="border" border="1px" color="#695171" inset="1px,0px,0px,1px"/>
            <onFocus name="border" border="1px" color="#000000"/>
            <onEnabled name="renderQuad" startColor="#99A6A300" endColor="#3C2C41" post="true" length="150"/>
            <onDisabled name="renderQuad" startColor="#3C2C41" endColor="#99A6A300" post="true" length="150"/>
        </effect>
    </style>
    <style id="nifty-listbox#bottom-right">
        <attributes width="23px" height="23px"/>
    </style>
    <style id="nifty-listbox-item" base="nifty-label">
        <attributes color="#AA7F4D" width="100%" align="left" textVAlign="center" textHAlign="left"/>
        <interact onClick="listBoxItemClicked()"/>
        <effect>
            <onCustom customKey="focus" name="colorBar" post="false" color="#3C2C41" neverStopRendering="true"
                      timeType="infinite"/>
            <onCustom customKey="select" name="colorBar" post="false" color="#3C2C41" neverStopRendering="true"
                      timeType="infinite"/>
            <onCustom customKey="select" name="textColor" post="false" color="#695171" neverStopRendering="true"
                      timeType="infinite"/>
            <onHover name="colorBar" color="#444736" post="false" neverStopRendering="true" timeType="infinite"
                     inset="1px"/>
            <onClick name="focus" targetElement="#parent#parent"/>
        </effect>
    </style>
</nifty-styles>
