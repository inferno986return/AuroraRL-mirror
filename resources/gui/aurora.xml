<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE themes PUBLIC "-//www.matthiasmann.de//TWL-Theme//EN"
        "http://hg.l33tlabs.org/twl/raw-file/tip/src/de/matthiasmann/twl/theme/theme.dtd">
<themes>
    <fontDef name="normal" filename="font.fnt" color="white" default="true">
        <fontParam if="error" color="red"/>
        <fontParam if="warning" color="orange"/>
        <fontParam if="disabled" color="gray"/>
        <fontParam if="textSelection" color="blue"/>
    </fontDef>
    <fontDef name="button.font" filename="font.fnt" color="white">
        <fontParam if="error" color="red"/>
        <fontParam if="warning" color="orange"/>
        <fontParam if="disabled" color="gray"/>
        <fontParam if="textSelection" color="blue"/>
        <fontParam if="pressed" offsetX="2" offsetY="2"/>
    </fontDef>

    <inputMapDef name="-defaultInputMap">
        <action name="selectAll">ctrl A</action>
        <action name="selectAll">cmd A</action>
        <action name="cut">ctrl X</action>
        <action name="cut">cmd X</action>
        <action name="copy">ctrl C</action>
        <action name="copy">cmd C</action>
        <action name="paste">ctrl V</action>
        <action name="paste">cmd V</action>
    </inputMapDef>

    <theme name="-defaults">
        <param name="background">
            <image>none</image>
        </param>
        <param name="overlay">
            <image>none</image>
        </param>
        <param name="font">
            <font>normal</font>
        </param>
        <param name="textAlignment">
            <enum type="alignment">left</enum>
        </param>
        <param name="minWidth">
            <int>0</int>
        </param>
        <param name="minHeight">
            <int>0</int>
        </param>
        <param name="maxWidth">
            <int>0</int>
        </param>
        <param name="maxHeight">
            <int>0</int>
        </param>
        <param name="inputMap">
            <inputMap>-defaultInputMap</inputMap>
        </param>
    </theme>

    <theme name="label" ref="-defaults" allowWildcard="true">
    </theme>
    <images file="images/gui_controls.png">
        <area name="button_area" xywh="1,1,63,37" splitx="R50,R14" splity="T11,B12" nocenter="true"/>
        <select name="button.background">
            <alias ref="button_area" if="pressed" inset="2,2,-2,-2"/>
            <alias ref="button_area"/>
        </select>
        <area name="scrollbar_area" xywh="68,0,30,113"/>
    </images>
    <theme name="button" ref="-defaults">
        <param name="background">
            <image>button.background</image>
        </param>
        <param name="border">
            <border>10,5</border>
        </param>
        <param name="font">
            <font>button.font</font>
        </param>
    </theme>
    <theme name="tooltipwindow" ref="-defaults">
        <param name="fadeInTime">
            <int>5</int>
        </param>
    </theme>
    <theme name="hscrollbar" ref="-defaults">
        <param name="scaleThumb">
            <bool>false</bool>
        </param>
        <theme name="leftbutton" ref="-defaults">
            <param name="background">
                <image>button.background</image>
            </param>
        </theme>
        <theme name="rightbutton" ref="-defaults">
            <param name="background">
                <image>button.background</image>
            </param>
        </theme>
        <theme name="thumb" ref="-defaults">
            <param name="background">
                <image>button.background</image>
            </param>
        </theme>
    </theme>
    <theme name="vscrollbar" ref="-defaults">
        <param name="scaleThumb">
            <bool>false</bool>
        </param>
        <theme name="upbutton" ref="-defaults">
            <param name="background">
                <image>button.background</image>
            </param>
        </theme>
        <theme name="downbutton" ref="-defaults">
            <param name="background">
                <image>button.background</image>
            </param>
        </theme>
        <theme name="thumb" ref="-defaults">
            <param name="background">
                <image>button.background</image>
            </param>
        </theme>
    </theme>
    <theme name="scrollpane" ref="-defaults">
        <theme name="hscrollbar" ref="hscrollbar"/>
        <theme name="vscrollbar" ref="vscrollbar"/>
        <param name="hasDragButton">
            <bool>false</bool>
        </param>
        <param name="maxHeight">
            <int>50</int>
        </param>
        <param name="minHeight">
            <int>0</int>
        </param>
        <param name="maxWidth">
            <int>500</int>
        </param>
        <param name="minWidth">
            <int>0</int>
        </param>
        <param name="autoScrollSpeed">
            <int>0</int>
        </param>
        <param name="autoScrollArea">
            <int>0</int>
        </param>
        <param name="scrollbarsAlwaysVisible">
            <bool>true</bool>
        </param>
        <param name="font">
            <font>normal</font>
        </param>
    </theme>
    <theme name="textarea" ref="-defaults">
        <param name="fonts">
            <map>
                <param name="default">
                    <string>normal</string>
                </param>
            </map>
        </param>
        <param name="font">
            <font>normal</font>
        </param>
        <param name="images">
            <map>
            </map>
        </param>
    </theme>
</themes>
